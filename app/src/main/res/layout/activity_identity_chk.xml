<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".identity_chk">

    <EditText
        android:id="@+id/idfield"
        android:layout_width="279dp"
        android:layout_height="39dp"
        android:ems="10"
        android:hint="@string/id_field_hint"
        android:includeFontPadding="false"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/id_check_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/id_check_button"
        android:layout_width="159dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="@string/check_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idfield" />
</androidx.constraintlayout.widget.ConstraintLayout>